@model IEnumerable<BorrowThings.Models.Expenses>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="MyExpenses" asp-action="Create" class="btn btn-primary">Create new Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
     {
        <table class="table table-bordered tabel-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Expense
                        </th>
                        <th>
                            Amount
                        </th>
                        <th>
                            Changes
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var expenses in Model)
                    {
                    <tr>
                        <td width="35%">@expenses.ExpensesName</td>
                        <td width="35%">@expenses.Amount</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="MyExpenses" asp-action="Update" asp-route-Id="@expenses.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="MyExpenses" asp-action="DeletePost" asp-route-Id="@expenses.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
</tr>
                }
            </tbody>
        </table>
     }
       else
            {
                <p>No items created yet</p>
            }

</div>